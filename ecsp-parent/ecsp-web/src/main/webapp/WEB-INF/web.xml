<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" 
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee  http://java.sun.com/xml/ns/j2ee/web-app_2_5.xsd">
	
	<display-name>ecsp-web</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:sysConfig/app-context.xml</param-value>
	</context-param>
	<!---->
	<context-param>
		<param-name>logbackConfigLocation</param-name>
		<param-value>classpath:portal/logback-service.xml</param-value>
	</context-param>
		<listener>
		<listener-class>com.al.ecs.log.LogbackConfigListener</listener-class>
	</listener>
	<!--
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:sysConfig/log4j.properties</param-value>
	</context-param>
	-->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- 
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	 -->
	<!-- Spring 刷新处理由Introspector使用而引起的缓冲泄露 -->
    <listener>
        <listener-class>org.springframework.web.util.IntrospectorCleanupListener</listener-class>
    </listener>

	<servlet>
		<servlet-name>serviceEngine</servlet-name>
		<servlet-class>com.ailk.ecsp.core.processor.ServiceEngine</servlet-class>
		<init-param>
			<param-name>serviceLibPath</param-name>
			<param-value>D:/work/ess</param-value>
		</init-param>
		<init-param>
			<param-name>runLevel</param-name>
			<!--PRODUCT,DEVELOP-->
			<param-value>DEVELOP</param-value>
		</init-param>
		<init-param>
			<param-name>checkPermission</param-name>
			<!--Y,N-->
			<param-value>N</param-value>
		</init-param>
		<init-param>
			<param-name>analogDataPath</param-name>
			<param-value>D:/ecsp_analog_data/</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>httpCallBackEngine</servlet-name>
		<servlet-class>com.ailk.ecsp.core.processor.HttpCallBackEngine</servlet-class>
	</servlet>	
	<servlet>
		<servlet-name>springServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath*:/sysConfig/spring-servlet.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>springServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>httpCallBackEngine</servlet-name>
		<url-pattern>*.cb</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>serviceEngine</servlet-name>
		<url-pattern>*.sr</url-pattern>
	</servlet-mapping>	
	
	
	<servlet>
		<servlet-name>CheckStaffServlet</servlet-name>
		<servlet-class>com.ailk.ecsp.sm.servlet.CheckStaffServlet</servlet-class>
		<init-param>
			<param-name>serviceLibPath</param-name>
			<param-value>D:/work/ess</param-value>
		</init-param>
		<init-param>
			<param-name>runLevel</param-name>
			<!--PRODUCT,DEVELOP-->
			<param-value>DEVELOP</param-value>
		</init-param>
		<init-param>
			<param-name>checkPermission</param-name>
			<!--Y,N-->
			<param-value>N</param-value>
		</init-param>
		<init-param>
			<param-name>analogDataPath</param-name>
			<param-value>D:/ecsp_analog_data/</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>CheckStaffServlet</servlet-name>
		<url-pattern>/staff/login/checkSessionStaff</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
</web-app>
