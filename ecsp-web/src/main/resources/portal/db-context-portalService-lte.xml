        <property name="dataSource" ref="multiDataSource" />
        <property name="mapperLocations">
			<list>
				<!-- 表示目录中，以Mapper.xml结尾所有文件 -->
				<value>classpath:com/ailk/ecsp/mybatis/sqlmapper/*Mapper.xml</value>
			</list>
